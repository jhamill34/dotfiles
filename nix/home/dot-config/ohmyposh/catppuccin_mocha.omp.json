{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "palette": {
        "os": "#ACB0BE",
        "closer": "p:os",
        "pink": "#F5C2E7",
        "lavender": "#B4BEFE",
        "blue": "#89B4FA",
        "text": "#494D64"
    },
    "transient_prompt": {
        "background": "transparent",
        "foreground": "p:closer",
        "template": "\uf105 "
    },
    "blocks": [
         {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "p:os",
                    "style": "plain",
                    "template": " {{.Icon}} ",
                    "type": "os"
                },
                {
                    "foreground": "p:pink",
                    "properties": {
                        "folder_icon": "..\ue5fe..",
                        "home_icon": "~",
                        "style": "agnoster_short"
                    },
                    "style": "plain",
                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "p:lavender",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "cherry_pick_icon": "\ue29b ",
                        "commit_icon": "\uf417 ",
                        "fetch_status": false,
                        "fetch_upstream_icon": false,
                        "merge_icon": "\ue727 ",
                        "no_commits_icon": "\uf0c3 ",
                        "rebase_icon": "\ue728 ",
                        "revert_icon": "\uf0e2 ",
                        "tag_icon": "\uf412 "
                    },
                    "template": "{{ .HEAD }} ",
                    "style": "plain",
                    "type": "git"
                },
                {
                    "style": "plain",
                    "foreground": "p:closer",
                    "template": "\uf105",
                    "type": "text"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "type": "rprompt",
            "segments": [
                {
                    "type": "kubectl",
                    "style": "plain",
                    "foreground": "p:blue",
                    "template": "{{if .Namespace}}⎈ {{.Namespace}}{{end}} "
                },
                {
                    "type": "aws",
                    "style": "plain",
                    "foreground": "#FFA400",
                    "template": " {{.Profile}}{{if .Region}}@{{.Region}}{{end}} "
                },
                {
                    "type": "ipify",
                    "style": "diamond",
                    "foreground": "#000000",
                    "background": "p:lavender",
                    "leading_diamond": "",
                    "trailing_diamond": " ",
                    "template": "{{ .IP }}",
                    "properties": {
                        "http_timeout": 1000
                    }
                }
            ]
        }
    ],
    "final_space": true,
    "version": 3
}
