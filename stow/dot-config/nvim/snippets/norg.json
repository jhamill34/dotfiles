{
    "insert screenshot": {
        "prefix": "screenshot",
        "body": [
            ".image ~/Notes/Screen-Shots/"
        ]
    },
    "investigation log": {
        "prefix": "ilog",
        "body": [
            "*** $CURRENT_HOUR:$CURRENT_MINUTE:00 - /${1:type}/",
            "${2:/finding/}"
        ]
    },
    "investigation fixes": {
        "prefix": "ifixsummary",
        "body": [
            "* FIX APPLIED",
            "  /what was done to resolve the issue?/",
            ""
        ]
    },
    "references section": {
        "prefix": "ref",
        "body": [
            "===",
            "",
            "* REFERENCES",
            "  - [${1:label}]{$2}",
            ""
        ]
    },
    "investigation lessons": {
        "prefix": "ilessons",
        "body": [
            "* LESSONS LEARNED",
            "  - ${1:/Key insight/}",
            "",
            "* PREVENTION",
            "  - ${2:/How do we avoid this in the future?/}",
            ""
        ]
    },
    "investigation actions": {
        "prefix": "iaction",
        "body": [
            "* FOLLOW-UP TASKS",
            "  - ( ) ${1:/task 1/}",
            ""
        ]
    },
    "investigation root cause": {
        "prefix": "iroot",
        "body": [
            "* ROOT CAUSE",
            "  ${1:/Technical explanation in 2-3 sentances/}",
            ""
        ]
    },
    "neorg calendar date": {
        "prefix": "cdate",
        "body": [
            "{@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR}"
        ]
    },
    "investigation update": {
        "prefix": "iupdate",
        "body": [
            "* SUMMARY",
            "  *UPDATE*: ${1:/Issue title/} - {@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR}",
            "  *STATUS*: ${2:/Investigating,Root cause found,Fix deployed, or Resolved/}",
            "  *IMPACT*: ${3:/Who or what is affected/}",
            "",
            "** Progress:",
            "  - ${4:/What we've learned/}",
            "  - ${5:/Current theory or fix in progress/}",
            "",
            "** Next Steps:",
            "  - ${6:/What happens next/}",
            "  - ${7:/ETA for next update/}",
            "",
            "** Workaround",
            "  ${8:/If available/}",
            ""
        ]
    },
    "customer triage": {
        "prefix": "tcust",
        "body": [
            "* ISSUE SUMMARY:",
            "  *JIRA*: ${1:DCLMSUST-XXXXX}",
            "  *TITLE*: ${2:/Short description/}",
            "  *REPORTED*: {@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR} at $CURRENT_HOUR:$CURRENT_MINUTE:00",
            "  *POINTS*: ${3:2}",
            "  *COMPONENT*: `dcl-${4:content}-svc`",
            "  *VERSION*: v${CURRENT_YEAR}.${CURRENT_MONTH}.1",
            "  *DESIGN DOC*: {:$/Design/All/TBD:}",
            "",
            "** QUICK TRIAGE:",
            "   - ( ) Reproducible?",
            "   - ( ) Multiple customers?",
            "   - ( ) Recent changes? Deployments?",
            "   - ( ) Evidence of issue? (i.e. logs, metrics, traces, etc.)",
            "   - ( ) Workaround available?",
            "",
            "** STORY",
            "  /Insert a story template here/",
            "",
            "** CLOSING CRITERIA:",
            "   - ( ) Pull Request Approved and Merged into main branch?",
            "   - ( ) 80% code coverage minimum",
            "   - ( ) New logic covered by tests",
            "   - ( ) CI/CD is Green",
            "   - ( ) QA has run regression tests",
            "",
            "** INVESTIGATION NOTES:",
            "   /Copy/paste your findings here as you go/",
            ""
        ]
    },
    "pager duty alert triage": {
        "prefix": "talert",
        "body": [
            "* ISSUE SUMMARY",
            "  *ALERT*: ${1:/Alert name/}",
            "  *FIRED*: {@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR} at $CURRENT_HOUR:$CURRENT_MINUTE:00",
            "  *SEVERITY*: ${2:/High,Med,Low/}",
            "  *ACTION*: ${3:/Investigate,Escalate,Acknowledge/}",
            "",
            "** QUICK CHECK:",
            "  - ( ) Grafana dashboard",
            "  - ( ) Recent deployments",
            "  - ( ) Error logs",
            "  - ( ) User reports",
            "",
            "** Notes",
            "  /log items from investigating this alert/"
        ]
    },
    "acceptance criteria": {
        "prefix": "tacc",
        "body": [
            "*GIVEN*: ${1:/that I am Authenticated Pre-Cruise guest/}",
            "*WHEN*: ${2:/I see the payment module/}",
            "*AND*: ${3:/I have paid in full/}",
            "*THEN*: ${3:/there should be a `view` link CTA that when tapped opens the view screen as a foundation step to the right/}",
            "",
            "*QA Sign off?*: NO",
            "*Product Sign off?*: NO"
        ]
    }
}
