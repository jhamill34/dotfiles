{
    "insert screenshot": {
        "prefix": "screenshot",
        "body": [
            ".image ~/Notes/Screen-Shots/"
        ]
    },
    "investigation log": {
        "prefix": "ilog",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /logs/ -> ${1:[finding]}"
        ]
    },
    "investigation metrics": {
        "prefix": "imetric",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /metrics/ -> ${1:[finding]}"
        ]
    },
    "investigation code": {
        "prefix": "itrace",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /code/ -> ${1:[finding]}"
        ]
    },
    "investigation theory": {
        "prefix": "itheory",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /theory/ -> ${1:[finding]}"
        ]
    },
    "investigation test": {
        "prefix": "itest",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /test/ -> ${1:[finding]}"
        ]
    },
    "investigation question": {
        "prefix": "iquest",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /question/ -> ${1:[finding]}"
        ]
    },
    "investigation fix": {
        "prefix": "ifix",
        "body": [
            "_*$CURRENT_HOUR:$CURRENT_MINUTE:00*_ /fix/ -> ${1:[finding]}"
        ]
    },
    "investigation fixes": {
        "prefix": "ifixsummary",
        "body": [
            "* FIX APPLIED",
            "  /what was done to resolve the issue?/",
            ""
        ]
    },
    "references section": {
        "prefix": "ref",
        "body": [
            "===",
            "",
            "* REFERENCES",
            "  - [${1:label}]{$2}",
            ""
        ]
    },
    "investigation lessons": {
        "prefix": "ilessons",
        "body": [
            "* LESSONS LEARNED",
            "  - ${1:/Key insight/}",
            "",
            "* PREVENTION",
            "  - ${2:/How do we avoid this in the future?/}",
            ""
        ]
    },
    "investigation actions": {
        "prefix": "iaction",
        "body": [
            "* FOLLOW-UP TASKS",
            "  - ( ) ${1:/task 1/}",
            ""
        ]
    },
    "investigation root cause": {
        "prefix": "iroot",
        "body": [
            "* ROOT CAUSE",
            "  ${1:/Technical explanation in 2-3 sentances/}",
            ""
        ]
    },
    "neorg calendar date": {
        "prefix": "cdate",
        "body": [
            "{@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR}"
        ]
    },
    "investigation update": {
        "prefix": "iupdate",
        "body": [
            "* SUMMARY",
            "  *UPDATE*: ${1:/Issue title/} - {@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR}",
            "  *STATUS*: ${2:/Investigating,Root cause found,Fix deployed, or Resolved/}",
            "  *IMPACT*: ${3:/Who or what is affected/}",
            "",
            "** Progress:",
            "  - ${4:/What we've learned/}",
            "  - ${5:/Current theory or fix in progress/}",
            "",
            "** Next Steps:",
            "  - ${6:/What happens next/}",
            "  - ${7:/ETA for next update/}",
            "",
            "** Workaround",
            "  ${8:/If available/}",
            ""
        ]
    },
    "customer triage": {
        "prefix": "tcust",
        "body": [
            "* ISSUE SUMMARY:",
            "  *CUSTOMER*: ${1:/customer name/}",
            "  *CHANNEL*: ${2:/slack, email, or support ticket/}",
            "  *REPORTED*: {@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR} at $CURRENT_HOUR:$CURRENT_MINUTE:00",
            "  *PRIORITY*: ${3:/P0,P1,P2,P3/}",
            "",
            " ${4:/What they're experiencing in 1-2 sentences/}",
            "",
            "** QUICK TRIAGE:",
            "   - ( ) Reproducible?",
            "   - ( ) Multiple customers?",
            "   - ( ) Recent changes? Deployments?",
            "   - ( ) Workaround available?",
            "",
            "",
            "** INVESTIGATION NOTES:",
            "   /Copy/paste your findings here as you go/",
            ""
        ]
    },
    "pager duty alert triage": {
        "prefix": "talert",
        "body": [
            "* ISSUE SUMMARY",
            "  *ALERT*: ${1:/Alert name/}",
            "  *FIRED*: {@ $CURRENT_DAY_NAME $CURRENT_MONTH_NAME $CURRENT_DATE $CURRENT_YEAR} at $CURRENT_HOUR:$CURRENT_MINUTE:00",
            "  *SEVERITY*: ${2:/High,Med,Low/}",
            "  *ACTION*: ${3:/Investigate,Escalate,Acknowledge/}",
            "",
            "** QUICK CHECK:",
            "  - ( ) Grafana dashboard",
            "  - ( ) Recent deployments",
            "  - ( ) Error logs",
            "  - ( ) User reports",
            "",
            "** Notes",
            "  /log items from investigating this alert/"
        ]
    }
}
